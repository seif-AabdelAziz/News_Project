@model NewsReadDetailsDTO

@{
    var news = Model;
}

<div class="card mb-3 bg-white">
    <figure class="text-center">
        <img class="card-img-top" style="width:60%" src="@news.ImageUrl">
    </figure>
    <div class="card-body">
        <h5 class="card-title">@news.Title</h5>
        <p class="card-text">@news.NewsDetails</p>
        <p class="card-text row">
            <small class="text-muted col-6">@news.PublicationDate</small>
            <small class="text-muted text-end col-6">Written By: @news.AuthorName</small>
        </p>
    </div>
</div>

