@model AuthorEditDTO

@{
    var author = Model;
}

<form asp-action="Edit" method="post">
    <div class="form-outline mb-4">
        <label class="form-label" asp-for="Name"></label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-outline mb-4">
        <label class="form-label" asp-for="Bio"></label>
        <textarea class="form-control" asp-for="Bio" rows="4"></textarea>
        <span asp-validation-for="Bio" class="text-danger"></span>
    </div>

    <div class="form-outline mb-4">
        <label class="form-label" asp-for="DOB"></label>
        <input class="form-control" asp-for="DOB" />
        <span asp-validation-for="DOB" class="text-danger pt-2"></span>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success btn-block mb-4 text-center" style="width:200px">Update</button>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
